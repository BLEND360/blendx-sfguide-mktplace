# =============================================================================
# BlendX Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Environment name: SHARED, DEV, QA, PROD
ENVIRONMENT=DEV

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# SNOWFLAKE CONNECTION
# =============================================================================
# Account identifier (e.g., xy12345.us-east-1)
SNOWFLAKE_ACCOUNT=

# User name (your username or BLENDX_APP_DEV_USER for service account)
SNOWFLAKE_USER=

# Host URL (optional, usually auto-derived from account)
# Format: <account>.snowflakecomputing.com
SNOWFLAKE_HOST=

# Database name
# For local dev: BLENDX_APP_DEV_DB
SNOWFLAKE_DATABASE=BLENDX_APP_DEV_DB

# Schema name
# For local dev: APP_DATA
SNOWFLAKE_SCHEMA=APP_DATA

# Warehouse name
# For local dev: BLENDX_APP_DEV_WH
SNOWFLAKE_WAREHOUSE=BLENDX_APP_DEV_WH

# Role name
# For local dev: BLENDX_APP_DEV_ROLE
SNOWFLAKE_ROLE=BLENDX_APP_DEV_ROLE

# =============================================================================
# SNOWFLAKE AUTHENTICATION
# =============================================================================
# Authentication method: oauth, keypair
# Use 'oauth' for SPCS (Snowpark Container Services)
# Use 'keypair' for local development with JWT
SNOWFLAKE_AUTHMETHOD=keypair

# Service user (optional, for service account authentication)
SNOWFLAKE_SERVICE_USER=

# Private key path (for keypair auth)
# Default: keys/rsa_key.p8
SNOWFLAKE_PRIVATE_KEY_PATH=keys/rsa_key.p8

# Private key password (if the key is encrypted, leave empty if not)
SNOWFLAKE_PRIVATEKEY_PASSWORD=

# Raw private key content (alternative to path, for CI/CD pipelines)
# If set, takes precedence over SNOWFLAKE_PRIVATE_KEY_PATH
SNOWFLAKE_PRIVATE_KEY_RAW=

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# LLM Provider: snowflake, openai
LLM_PROVIDER=snowflake

# LLM Model name
# For Snowflake: claude-3-5-sonnet, llama3.1-70b, mistral-large2, etc.
# For OpenAI: gpt-4o, gpt-4o-mini, etc.
LLM_MODEL_NAME=claude-3-5-sonnet

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Embedding Provider: snowflake, openai
EMBEDDING_PROVIDER=snowflake

# Embedding Model name
# For Snowflake: snowflake-arctic-embed-m, snowflake-arctic-embed-l, e5-base-v2
# For OpenAI: text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL_NAME=snowflake-arctic-embed-m

# =============================================================================
# OPTIONAL: NL GENERATOR
# =============================================================================
# Default model for natural language generation (optional override)
NL_GENERATOR_DEFAULT_MODEL=

# =============================================================================
# OPTIONAL: CUSTOM TABLE CONFIGURATION
# =============================================================================
# Override default database/schema/table for crew execution results
# If not set, uses SNOWFLAKE_DATABASE and SNOWFLAKE_SCHEMA
CREW_EXECUTION_DATABASE=
CREW_EXECUTION_SCHEMA=
CREW_EXECUTION_TABLE=crew_executions

# Override default database/schema/table for workflows
# If not set, uses SNOWFLAKE_DATABASE and SNOWFLAKE_SCHEMA
WORKFLOWS_DATABASE=
WORKFLOWS_SCHEMA=
WORKFLOWS_TABLE=workflows
